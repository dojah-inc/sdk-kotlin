<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/padding_vertical_item_spinner"
    android:paddingStart="@dimen/padding_start_item_spinner">

    <ImageView
        android:id="@+id/image_flag"
        android:layout_width="@dimen/width_country_flag_icon"
        android:layout_height="@dimen/height_country_flag_icon"
        android:layout_marginEnd="@dimen/margin_end_item_spinner_text"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/TextAppearance.Dojah.ParagraphSmall"
        android:text="Ascension Island    +237"
        android:textAppearance="@style/TextAppearance.Dojah.Title2" />

    <RadioButton
        android:id="@+id/radio_button"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:visibility="gone"
        app:buttonTint="@color/primary"
        android:checked="true"
        tools:visibility="visible"
        />
</LinearLayout>