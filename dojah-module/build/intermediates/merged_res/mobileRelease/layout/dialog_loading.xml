<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_horizontal_screen_dp"
    android:paddingVertical="@dimen/padding_top_dialog_error">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_indicator"
        style="@style/CircularProgressIndicator.Dojah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorSize="@dimen/size_indicator_dialog_loading"
        app:trackThickness="6dp"
        android:layout_gravity="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_drawable_style_text_view_success_title"
        android:gravity="center_horizontal"
        app:drawableTopCompat="@null"
        android:visibility="gone"
        tools:text="Loading..."/>
</LinearLayout>