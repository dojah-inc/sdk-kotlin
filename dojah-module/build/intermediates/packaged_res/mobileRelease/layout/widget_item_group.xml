<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_top_send_money_option_2"
    android:background="@drawable/shape_no_stroke_radius_8"
    tools:backgroundTint="@color/red"
    tools:paddingEnd="@dimen/padding_end_send_money_option"
    tools:paddingStart="@dimen/padding_start_send_money_option"
    tools:paddingVertical="@dimen/padding_vertical_send_money_option"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="@dimen/size_widget_item_group_icon"
        android:layout_height="@dimen/size_widget_item_group_icon"
        android:background="@drawable/shape_circle"
        android:padding="@dimen/padding_send_money_option_icon"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_avatar"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal_item_transfer_header_item_texts"
        android:layout_marginEnd="@dimen/margin_horizontal_item_transfer_header_item_texts"
        app:layout_constraintBottom_toTopOf="@id/text_subtitle"
        app:layout_constraintEnd_toStartOf="@id/image_arrow"
        app:layout_constraintStart_toEndOf="@id/image_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/full_names"/>

    <TextView
        android:id="@+id/text_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:textAppearance="@style/TextAppearance.Dojah.Body7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/text_title"
        app:layout_constraintStart_toStartOf="@id/text_title"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        tools:text="@tools:sample/lorem"/>

    <ImageView
        android:id="@+id/image_arrow"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:alpha="0.8"
        android:src="@drawable/ic_keyboard_arrow_right"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_title"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?android:attr/textColor" />
</merge>