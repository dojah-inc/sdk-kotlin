<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_horizontal_screen_dp"
    android:paddingTop="@dimen/padding_top_dialog"
    android:paddingBottom="@dimen/margin_bottom_screen_default">

    <ImageView
        android:id="@+id/image_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="6dp"
        android:padding="8dp"
        android:src="@drawable/ic_close"
        android:visibility="gone"
        app:tint="?android:attr/textColor" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_dialog_error_icon_to_close"
        app:drawableTint="@color/red"
        app:drawableTopCompat="@drawable/ic_info" />

    <TextView
        android:id="@+id/text_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_top_first_login_button_login" />

    <Button
        android:id="@+id/button_fund_wallet"
        style="@style/Button.Dojah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_top_transaction_summary_buttons_button_share"
        tools:visibility="gone" />

    <Button
        android:id="@+id/text_maybe_later"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.Dojah.Title2"
        android:textColor="?attr/colorPrimary"
        app:backgroundTint="@color/transparent"
        app:rippleColor="?attr/colorPrimary" />
</LinearLayout>