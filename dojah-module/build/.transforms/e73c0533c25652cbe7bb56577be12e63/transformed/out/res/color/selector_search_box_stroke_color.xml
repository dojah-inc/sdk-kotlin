<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled -->
    <item android:alpha="0.1" android:color="?android:attr/textColor" android:state_enabled="false" />

    <!-- Focused -->
    <item android:alpha="0.1" android:color="?android:attr/textColor" android:state_focused="true" />

