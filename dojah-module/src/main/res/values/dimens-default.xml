<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <dimen name="margin_bottom_screen_default">40dp</dimen>

    <dimen name="design_bottom_navigation_height" tools:override="true">80dp</dimen>
    <!--    The padding bottom for the top level views affected by the toolbar and the bottom nav-->
    <!--    Which is simply the addition of the bottom nav size (97dp) and the margin top of the app bar (53dp)-->
    <dimen name="padding_bottom_screen_main">97dp</dimen>

    <!--    These two together make up the 53dp distance from the top of the screen-->
    <!--    For scrollable views, this value should act as the paddingBottom, so the required distance from the bottom-->
    <!--    will be seen-->
    <dimen name="margin_top_app_bar_layout">53dp</dimen>
    <dimen name="padding_vertical_linear_layout_app_bar_layout">0dp</dimen>

    <dimen name="padding_top_default">21dp</dimen>
    <dimen name="padding_top_default_2">27dp</dimen>
    <dimen name="padding_top_default_3">43dp</dimen>

    <!--    This should have been 24dp for both the app bar and the margin end, but the Navigation-->
    <!--    becomes really thin and is very stressful to click so instead padding will be added-->
    <!--    to the button by reducing the size of these two-->
    <dimen name="padding_start_app_bar_layout">16dp</dimen>
    <dimen name="margin_start_toolbar_navigation_button">6dp</dimen>
    <dimen name="margin_end_toolbar_navigation_button">16dp</dimen>
    <dimen name="padding_horizontal_navigation_button">18dp</dimen>
    <dimen name="padding_vertical_navigation_button">8dp</dimen>

    <dimen name="padding_bottom_screen_2_dp">65dp</dimen>

    <dimen name="size_user_pic_dp">50dp</dimen>
    <dimen name="margin_end_toolbar_logo">13dp</dimen>
    <dimen name="padding_reward_balance_card">16dp</dimen>
    <dimen name="reward_progress_card_padding">12dp</dimen>
    <dimen name="resource_video_radius">16dp</dimen>
</resources>