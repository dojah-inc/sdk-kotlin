<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SlideAnimation.Activity" parent="@android:style/Animation.Activity">
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="android:windowAnimationStyle">@style/SlideAnimation.Activity</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
    </style>


    <style name="Theme.Dojah" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:colorBackground">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowAnimationStyle">@style/SlideAnimation.Activity</item>

        <!-- Secondary brand color. -->

        <item name="colorControlNormal">@color/dark_purple</item>
        <item name="colorAccent">@color/ash</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textColorHint">@color/color_text_alpha_30</item>
        <item name="android:fontFamily">@font/circular_std_regular_400</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="tabStyle">@style/TabLayout.Dojah</item>
        <item name="itemGroupStyle">@style/ItemGroup.Dojah</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Navigation</item>
        <item name="editTextSpinnerStyle">@style/EditTextWithSpinner.Dojah</item>
        <item name="materialButtonStyle">@style/Button.Dojah</item>
        <item name="materialBtnStyle">@style/Button.Dojah</item>

        <!--        <item name="materialCalendarStyle">@style/MaterialDatePicker.Dojah</item>-->
        <item name="textInputStyle">@style/TextInputLayout.Dojah</item>
        <item name="circularProgressIndicatorStyle">@style/CircularProgressIndicator.Dojah</item>
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
        <item name="snackbarStyle">@style/Snackbar.Dojah</item>


        <!--        Dojah styles    -->
        <item name="appLogo">@drawable/app_logo</item>
        <item name="appBarCloseIcon">@drawable/ic_close</item>
        <item name="appBarBackIcon">@drawable/corned_arrow_back</item>
        <item name="icVerificationAvatar">@drawable/ic_verification_avatar</item>
