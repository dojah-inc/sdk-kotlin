<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/logo_size"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_verification_avatar"
            android:visibility="visible" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_16dp"
            app:cardBackgroundColor="@color/card_back_color"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:contentPadding="@dimen/margin_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_title"
                    style="@style/TextAppearance.Dojah.Header6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/please_note_the_following" />

                <com.dojah.sdk_kyc.ui.utils.widget.DojahTextView
                    android:id="@+id/text_subtitle"
                    style="@style/TextAppearance.Dojah.ParagraphSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_13dp"
                    android:drawablePadding="@dimen/margin_8dp"
                    android:gravity="start"
                    android:textColor="@color/body_color"
                    android:text="@string/be_in_well_lit"
                    app:drawableStartCompat="@drawable/ic_check" />
                <com.dojah.sdk_kyc.ui.utils.widget.DojahTextView
                    android:id="@+id/text_subtitle2"
                    style="@style/TextAppearance.Dojah.ParagraphSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_13dp"
                    android:drawablePadding="@dimen/margin_8dp"
                    android:gravity="start"
                    android:textColor="@color/body_color"
                    android:text="@string/hide_not_your_face"
                    app:drawableStartCompat="@drawable/ic_check" />
                <com.dojah.sdk_kyc.ui.utils.widget.DojahTextView
                    android:id="@+id/text_subtitle3"
                    style="@style/TextAppearance.Dojah.ParagraphSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_13dp"
                    android:drawablePadding="@dimen/margin_8dp"
                    android:gravity="start"
                    android:textColor="@color/body_color"
                    android:text="@string/show_id_clearly"
                    app:drawableStartCompat="@drawable/ic_check" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.dojah.sdk_kyc.ui.utils.widget.DojahMaterialButton
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:text="@string/_continue"
            android:layout_marginHorizontal="@dimen/margin_24dp"
            />
    </LinearLayout>
</RelativeLayout>