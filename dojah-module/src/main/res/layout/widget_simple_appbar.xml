<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_top_default">


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/margin_start_toolbar_navigation_button"
            android:background="@color/transparent"
            android:gravity="start"
            android:paddingHorizontal="@dimen/padding_horizontal_navigation_button"
            android:paddingVertical="@dimen/padding_vertical_navigation_button"
            android:src="@drawable/ic_arrow_left"
            android:visibility="visible"
            app:tint="@color/black"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:fontFamily="@font/circular_std_medium_500"
            android:gravity="center"
            android:text="@string/done"
            android:textAppearance="@style/TextAppearance.Dojah.Body3"
            android:textColor="@color/qr_pay" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/trail_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/margin_start_toolbar_navigation_button"
            android:background="@color/transparent"
            android:gravity="end"
            android:paddingHorizontal="@dimen/padding_horizontal_navigation_button"
            android:src="@drawable/ic_refresh"
            android:textColor="@color/black"
            android:visibility="visible"
            app:backgroundTint="@color/black"
            app:icon="@drawable/ic_refresh"
            app:iconPadding="6dp"
            app:iconSize="@dimen/padding_top_default_2"
            app:tint="@color/black" />


    </LinearLayout>
</merge>
